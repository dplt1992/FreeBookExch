@model IEnumerable<FreeBooks.Models.Utilizadores>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoUtilizador)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => user.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Email)
                </td>
                @*::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::*@
                <td>
                    <img src="/Images/@user.Foto"
                     alt="Foto de: @user.UserName"
                     title="@user.UserName"
                     height="30" />
                </td>
                @*::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::*@
                <td>
                    @Html.DisplayFor(modelItem => user.TipoUtilizador)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.IdUser">Edit</a> |
                    <a asp-action="Details" asp-route-id="@user.IdUser">Details</a> |
                    <a asp-action="Delete" asp-route-id="@user.IdUser">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
