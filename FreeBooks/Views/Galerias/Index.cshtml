@model IEnumerable<FreeBooks.Models.Galerias>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="table">
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Livro)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Livro.IdLivro)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdGaleria">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdGaleria">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdGaleria">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
<div class="btn-group">
    <div class="form-group">
        <button >
                    <a  class="btn btn-primary" asp-area="" asp-controller="Fotos" asp-action="Index">Fotos Index</a>
        </button>
    </div>
    <div class="form-group">
        <button >
                <a  class="btn btn-primary" asp-area="" asp-controller="Fotos" asp-action="Create">Fotos Create</a>   
        </button>
    </div>
</div>