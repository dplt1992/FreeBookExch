@model FreeBooks.Models.Fotos

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Fotos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdFoto" />
            <div class="form-group">  
                <table>
                    <tr>
                        <img src="~/Fotos/@Model.Foto" height="100" />
                    </tr>
                </table>
                <input multiple type="file" name="Foto" class="form-control" accept=".jpg,.png" />
            <div class="form-group">
                <label asp-for="LivroFK" class="control-label"></label>
                <select asp-for="LivroFK" class="form-control" asp-items="ViewBag.LivroFK"></select>
                <span asp-validation-for="LivroFK" class="text-danger"></span>
            </div>     
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a  asp-area="" asp-controller="Livros" asp-action="Index">Back to Livros</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
