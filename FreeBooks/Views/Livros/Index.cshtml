@model IEnumerable<FreeBooks.Models.Livros>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="table">
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Edicao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Editora)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Autor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Anuncio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Oferta)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edicao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Editora)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Anuncio.IdAnuncio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Oferta.IdOferta)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdLivro">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdLivro">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdLivro">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
<div class="btn-group">
    <div class="form-group">
        <button >
                    <a  class="btn btn-primary" asp-area="" asp-controller="Galerias" asp-action="Index">Galerias Index</a>
        </button>
    </div>
    <div class="form-group">
        <button >
                <a  class="btn btn-primary" asp-area="" asp-controller="Galerias" asp-action="Create">Galerias Create</a>   
        </button>
    </div>
</div>